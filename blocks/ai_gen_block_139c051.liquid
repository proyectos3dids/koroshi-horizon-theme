{% doc %}
  @prompt
    Social media links, quiero poder poner logos

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-media-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-social-media__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    color: {{ block.settings.icon_color }};
    text-decoration: none;
    transition: all 0.3s ease;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    overflow: hidden;
  }

  .ai-social-media__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.icon_hover_background_color }};
    color: {{ block.settings.icon_hover_color }};border-color: {{ block.settings.border_hover_color }};transform: translateY(-2px);
  }

  .ai-social-media__link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);fill: currentColor;
  }

  .ai-social-media__link-{{ ai_gen_id }} img {
    width: calc({{ block.settings.icon_size }}px * 0.8);
    height: calc({{ block.settings.icon_size }}px * 0.8);
    object-fit: contain;
  }

  .ai-social-media__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-size: 14px;
    background-color: #f9f9f9;
    border-radius: 8px;
    border: 2px dashed #ddd;
  }

  @media screen and (max-width: 749px) {
    .ai-social-media-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.8 }}px;
      padding: {{ block.settings.padding_top | times: 0.8 }}px {{ block.settings.padding_horizontal | times: 0.8 }}px {{ block.settings.padding_bottom | times: 0.8 }}px {{ block.settings.padding_horizontal | times: 0.8 }}px;
    }

    .ai-social-media__link-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }

    .ai-social-media__link-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size | times: 0.9 }}px * 0.6);
      height: calc({{ block.settings.icon_size | times: 0.9 }}px * 0.6);
    }

    .ai-social-media__link-{{ ai_gen_id }} img {
      width: calc({{ block.settings.icon_size | times: 0.9 }}px * 0.8);
      height: calc({{ block.settings.icon_size | times: 0.9 }}px * 0.8);
    }
  }
