{%- assign clamp_on = block.settings.truncate_title -%}
{%- assign clamp_lines = block.settings.truncate_lines | default: 2 -%}

<style>
  /* üîí Fuerza el line-clamp sobre cualquier estilo del tema */
  #title-clamp-{{ block.id }}.clamp--on > *,
  #title-clamp-{{ block.id }}.clamp--on a > * {
    display: -webkit-box !important;
    -webkit-box-orient: vertical !important;
    -webkit-line-clamp: var(--clamp-lines, 2) !important;
            line-clamp: var(--clamp-lines, 2) !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    max-height: none !important;
  }

  /* üö´ Cuando el clamp est√° desactivado, anulamos cualquier clamp global del tema */
  #title-clamp-{{ block.id }}:not(.clamp--on) > *,
  #title-clamp-{{ block.id }}:not(.clamp--on) a > * {
    -webkit-line-clamp: unset !important;
            line-clamp: unset !important;
    display: block !important;
    overflow: visible !important;
    text-overflow: clip !important;
    max-height: none !important;
  }
</style>

<div id="title-clamp-{{ block.id }}"
     class="{% if clamp_on %}clamp--on{% endif %}"
     style="--clamp-lines: {{ clamp_lines }}">
  {% if closest.product == blank %}
    {% assign text = 'placeholders.product_title' | t %}
    {% assign product_title = '<p>' | append: text | append: '</p>' %}
    {% render 'text', fallback_text: product_title, block: block %}
  {% else %}
    {% assign product_title = '<p>' | append: closest.product.title | append: '</p>' %}
    <a
      class="contents user-select-text"
      ref="productTitleLink"
      href="{% render 'product-card-variant-url', product: closest.product %}"
      aria-hidden="true"
    >
      {% render 'text', fallback_text: product_title, block: block %}
    </a>
  {% endif %}
</div>

